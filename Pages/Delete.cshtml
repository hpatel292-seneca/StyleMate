@page
@model StyleMate.Pages.DeleteModel
@{
}

<h1> Delete Clothing Item </h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.ClothingItem.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.ClothingItem.Type
        </dd>
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Model.ClothingItem.Color
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>