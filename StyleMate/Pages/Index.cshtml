@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StyleMate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/5hb7ie2LloXDQDeW5fXA3xLgH3OFNJ7UthUXP1" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <main role="main" class="container">
        <div class="hero bg-light p-5 rounded mt-3">
            <h1>Welcome to StyleMate!</h1>
            <p class="lead"><b>Find the perfect match for your clothing items effortlessly. Select an item, and we'll suggest the best matches for you.</b></p>
            <a class="btn btn-primary btn-lg" href="/Create" role="button">Get Started &raquo;</a>
        </div>

        <h1>Clothing Items</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Color</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Color</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                            <a href="/findmatches/@item.Id">Find Matches</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-page="./Create">Add New Item</a>

        <section class="mt-5">
            <h2>Trending Matches</h2>
            <div class="row">
                <!-- Example item -->
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/brown-tshirt.jpeg" class="card-img-top" alt="Brown T-Shirt" style="height: 500px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Brown T-Shirt</h5>
                            <p class="card-text">Matched with: Blue Jeans, White Sneakers</p>
                        </div>
                    </div>
                </div>
                <!-- More items -->
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/red-dress.webp" class="card-img-top" alt="Red Dress" style="height: 500px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Red Dress</h5>
                            <p class="card-text">Matched with: Black Heels, Gold Clutch</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/black-suit.png" class="card-img-top" alt="Black Suit" style="height: 500px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Black Suit</h5>
                            <p class="card-text">Matched with: White Shirt, Oxford Shoes</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Add a 'Featured Categories' section -->
        <section class="mt-5">
            <h2>Featured Categories</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/tshirts.webp" class="card-img-top" alt="T-Shirts" style="height: 350px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">T-Shirts</h5>
                            <p class="card-text">Find the best pairings for your favorite tees.</p>
                            <a href="/Create" class="btn btn-primary">Explore</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/jeans.jpg" class="card-img-top" alt="Jeans" style="height: 350px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Jeans</h5>
                            <p class="card-text">Discover top matches for casual and formal looks.</p>
                            <a href="/Create" class="btn btn-primary">Explore</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/images/shoes.webp" class="card-img-top" alt="Shoes" style="height: 350px; width: 100%; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Shoes</h5>
                            <p class="card-text">Perfect shoes to complete your outfits.</p>
                            <a href="/Create" class="btn btn-primary">Explore</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Add a 'How it Works' section -->
        <section class="mt-5 text-center">
            <h2>How It Works</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                 
                    <h5>1) Select an Item</h5>
                    <p>Choose a clothing item from your wardrobe or our catalog.</p>
                </div>
                <div class="col-md-4">
                   
                    <h5>2) Get Suggestions</h5>
                    <p>We recommend the best matches to complete your outfit.</p>
                </div>
                <div class="col-md-4">
                    
                    <h5>3) Look Great</h5>
                    <p>Step out with confidence in a perfectly coordinated look</p>
                </div>
            </div>
        </section>


    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbVqvDo3Ckss++8q3COibFnItu2U6Vz5t2f5E4p7xM1RFtmQ8mdZ0F4pV0QPtfg" crossorigin="anonymous"></script>
</body>
</html>
